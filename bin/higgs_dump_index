#!/usr/local/bin/ruby
# -*- coding: utf-8 -*-

require 'higgs/index'
require 'optparse'
require 'pp'
require 'yaml'

opts = OptionParser.new
opts.banner = "Usage: #{opts.program_name} [options] INDEX_PATH"

output_format = :pretty
opts.on('-o', '--output-format=FORMAT', [ :pretty, :yaml ]) {|value|
  output_format = value
}

opts.on_tail('-h', '--help') {
  puts opts
  puts 'Output format:'
  print opts.summary_indent, :pretty, "\n"
  print opts.summary_indent, :yaml, "\n"
  exit(1)
}
opts.parse!

index = Higgs::MVCCIndex.new
index.load(ARGV[0])

case (output_format)
when :pretty
  pp index
when :yaml
  puts index.to_yaml
else
  raise "unknown output format: #{output_format}"
end

# Local Variables:
# mode: Ruby
# indent-tabs-mode: nil
# End:
