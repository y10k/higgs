#!/usr/local/bin/ruby
# -*- coding: utf-8 -*-

require 'higgs/jlog'
require 'optparse'
require 'pp'
require 'yaml'

opts = OptionParser.new
opts.banner = "Usage: #{opts.program_name} [options] [JOURNAL_LOG_PATHs]"

output_format = :pretty
opts.on('-o', '--output-format=FORMAT', [ :pretty, :yaml ]) {|value|
  output_format = value
}

opts.on_tail('-h', '--help') {
  puts opts
  puts 'Output format:'
  print opts.summary_indent, :pretty, "\n"
  print opts.summary_indent, :yaml, "\n"
  exit 1
}
opts.parse!

def scan_args
  if (ARGV.empty?) then
    yield(STDIN)
  else
    for filename in ARGV
      File.open(filename, 'r') {|r|
        r.binmode
        yield(r)
      }
    end
  end
  nil
end

scan_args do |r|
  Higgs::JournalLogger.scan_log(r) do |log|
    case (output_format)
    when :pretty
      pp log
    when :yaml
      puts log.to_yaml
    else
      raise "unknown output format: #{output_format}"
    end
  end
end

# Local Variables:
# mode: Ruby
# indent-tabs-mode: nil
# End:
